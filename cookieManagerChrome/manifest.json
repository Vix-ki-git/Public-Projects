{
  "manifest_version": 3,
  "name": "Cookie Manager",
  "description": "View, disable, and delete cookies for the current tab.",
  "version": "1.0",
  "permissions": [
    "activeTab", 
    "cookies",
    "tabs",
    "storage"
    
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popups/index.html",
    "default_icon": "icons/icon16.png"
  },
  "icons": {
    "16": "icons/icon16.png", 
    "32": "icons/icon32.png",
    "48": "icons/icon48.png", 
    "128":  "icons/icon128.png"
  },
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
  
}
